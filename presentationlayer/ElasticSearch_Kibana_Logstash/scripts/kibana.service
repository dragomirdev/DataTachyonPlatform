[Unit]
Description=Kibana service

[Service]
Type=simple
User=dtpuser
Group=dtpuser
WorkingDirectory=/opt/elk/kibana
ExecStart=/opt/elk/kibana/bin/kibana --host JP-DTP-ELK-VM --elasticsearch http://10.0.4.10:9200 &
TimeoutSec=30
Restart=on-failure
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target

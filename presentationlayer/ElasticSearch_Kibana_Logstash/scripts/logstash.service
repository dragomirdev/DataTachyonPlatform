[Unit]
Description=Logstash service

[Service]
Type=simple
User=dtpuser
Group=dtpuser
WorkingDirectory=/opt/elk/logstash
ExecStart=/opt/elk/logstash/bin/logstash -e 'input { stdin { } } output { stdout {} }'
TimeoutSec=30
Restart=on-failure
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
